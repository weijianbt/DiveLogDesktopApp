<Page x:Class="DiveLogApplication.Views.DiveLogView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiveLogApplication" xmlns:core="clr-namespace:DiveLogApplication.Core" d:DataContext="{d:DesignInstance vm:DiveLogViewModel}"
      xmlns:vm="clr-namespace:DiveLogApplication.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="Dive Log">
    <Page.DataContext>
        <vm:DiveLogViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.65*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Row="0" Grid.Column="0"
                 ItemsSource="{Binding DiveLogList}" SelectedItem="{Binding SelectedDiveEntry}"
                 MouseDoubleClick="ListBox_MouseDoubleClick"
                 HorizontalContentAlignment="Stretch"
                 >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="DarkGray" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid.Resources>
                                <Style TargetType="Label">
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </Grid.Resources>

                            <Label Grid.Row="0" Grid.Column="0" Content="Dive Location: "/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Location}"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Dive Site: "/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DiveSite}"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="Start Time: "/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding StartTime}"/>

                            <Label Grid.Row="3" Grid.Column="0" Content="End Time: "/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding EndTime}"/>

                            <Label Grid.Row="4" Grid.Column="0" Content="Duration (mins): "/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Duration}"/>

                            <Label Grid.Row="5" Grid.Column="0" Content="Max Depth (m): "/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding MaxDepth}"/>

                            <Label Grid.Row="6" Grid.Column="0" Content="Average Depth (m): "/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding AverageDepth}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <GroupBox Grid.Row="0" Grid.Column="1" Header="Actions">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="100"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="Margin" Value="2"/>
                    </Style>
                </Grid.Resources>
                
                <Button Grid.Row="0" Grid.Column="0" Content="New Entry" Command="{Binding NewEntryCommand}"/>
                <Button Grid.Row="0" Grid.Column="1" Content="Edit Entry" Command="{Binding EditEntryCommand}"/>
                <Button Grid.Row="1" Grid.Column="0" Content="Duplicate Entry" Command="{Binding DuplicateEntryCommand}"/>
                <Button Grid.Row="1" Grid.Column="1" Content="Delete Entry" Command="{Binding DeleteEntryCommand}"/>
            </Grid>
        </GroupBox>
        
    </Grid>
</Page>
