<Page x:Class="DiveLogApplication.Views.MainPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiveLogApplication.Views"
      xmlns:vm="clr-namespace:DiveLogApplication.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="MainPageView">
    <Page.DataContext>
        <vm:MainWindowViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>

            <Style TargetType="Border">
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="BorderBrush" Value="LightBlue"/>
                <Setter Property="Margin" Value="3"/>
            </Style>
        </Grid.Resources>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="{Binding WelcomeMessage}"/>
            <Label Grid.Row="1" Content="{Binding DiverSinceMessage}" FontSize="15"/>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2">
            <Label Content="{Binding CurrentDateTime}" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        </Grid>
        
        <Border Grid.Row="1" Grid.Column="0">
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Total Dives"/>
                <Separator Grid.Row="0" VerticalAlignment="Bottom"/>
                <Label Grid.Row="1" Content="{Binding TotalDives}"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="1">
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Longest Dive (mins)"/>
                <Separator Grid.Row="0" VerticalAlignment="Bottom"/>
                <Label Grid.Row="1"  Content="{Binding LongestDive}"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="2">
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Deepest Dive (m)"/>
                <Separator Grid.Row="0" VerticalAlignment="Bottom"/>
                <Label Grid.Row="1"  Content="{Binding DeepestDive}"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.Column="0">
            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Most Frequent Dive Site"/>
                <Separator Grid.Row="0" VerticalAlignment="Bottom"/>
                <Label Grid.Row="1"  Content="{Binding MostFrequentDiveSite}"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.Column="1">
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Average Depth (m)"/>
                <Separator Grid.Row="0" VerticalAlignment="Bottom"/>
                <Label Grid.Row="1"  Content="{Binding AverageDepth}"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.Column="2">
            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Last Dive Date"/>
                <Separator Grid.Row="0" VerticalAlignment="Bottom"/>
                <Label Grid.Row="1"  Content="{Binding LastDiveDate}"/>
            </Grid>
        </Border>
    </Grid>
</Page>
