<Page x:Class="DiveLogApplication.Views.MainPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiveLogApplication.Views"
      xmlns:vm="clr-namespace:DiveLogApplication.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="MainPageView">
    <Page.DataContext>
        <vm:MainWindowViewModel/>
    </Page.DataContext>
    <Grid>
        <Label Content="Main page"/>

        <Label Content="{Binding WelcomeMessage}"/>
        <Label Content="{Binding TotalDives}"/>
        
    </Grid>
</Page>
